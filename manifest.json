{
    "manifest_version": 2,
    "name": "__MSG_extensionName__",
    "description": "__MSG_extensionDescription__",
    "version": "0.2",
    "default_locale": "en",
    "homepage_url": "https://github.com/uiolee/get_cookies",
    "permissions": ["activeTab", "cookies", "<all_urls>"],
    "icons": {
        "16": "icons/favicon-16x16.png",
        "32": "icons/favicon-32x32.png",
        "180": "icons/apple-touch-icon.png",
        "192": "icons/android-chrome-192x192.png",
        "512": "icons/android-chrome-512x512.png"
    },

    "browser_action": {
        "default_icon": "icons/favicon-32x32.png",
        "default_title": "Get_Cookies",
        "default_popup": "html/popup.html"
    },

    "page_action": {
        "browser_style": true,
        "default_icon": "icons/favicon-32x32.png",
        "default_title": "Get_Cookies",
        "default_popup": "html/popup.html"
    },

    "options_ui": {
        "page": "html/options.html",
        "open_in_tab": false
    }
}
