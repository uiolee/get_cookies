{
  "manifest_version": 2,
  "name": "get_cookies",
  "version": "0.1",
  "description": "get cookies from current tab or host.",
  "homepage_url": "https://github.com/uiolee/get-cookies",
    "permissions": [
      "tabs",
      "cookies",
      "<all_urls>"
  ],
  "icons": {
    "16": "icons/favicon-16x16.png",
    "32": "icons/favicon-32x32.png",
    "48": "icons/favicon.ico",
    "180": "icons/apple-touch-icon.png",
    "192": "icons/android-chrome-192x192.png",
    "512": "icons/android-chrome-512x512.png"
  },
  
  "browser_action": {
    "default_icon": "icons/favicon-32x32.png",
    "default_title": "get_cookies",
    "default_popup": "html/popup.html"
  },

  "page_action": {
  "browser_style": true,
  "default_icon": "icons/favicon-32x32.png",
  "default_title": "get_cookies",
  "default_popup": "html/popup.html"
},

"options_ui": {
    "page": "html/options.html"
  }

}